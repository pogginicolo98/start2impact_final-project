[Unit]
Description=WebSocket Daphne Service
After=network.target

[Service]
Type=simple
User=chainbid
WorkingDirectory=/home/ubuntu/start2impact_final-project/chainBid
ExecStart=/home/ubuntu/start2impact_final-project/venv/bin/daphne \
          -b 0.0.0.0 \
          -p 8001 \
          chainBid.asgi:application
Restart=on-failure

[Install]
WantedBy=multi-user.target
